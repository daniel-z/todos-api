<div class="row">
    <div class="col-sm-12 align-self-center">

        <div class="row">
            <div class="col-sm-4">
                <h2>
                    {{this.title}} <br>
                    <span>{{this.method}} {{this.url}}</span>
                </h2>
                <p>{{{description}}}</p>
            </div>
            <div class="col-sm-8">
                <div class="widget">
                    <div class="widget__title">
                        <h3>
                            <dl>
                                <dt>Method:</dt> <dd>{{this.method}}</dd>
                                <dt>Url:</dt> <dd>{{this.url}}</dd>
                            </dl>
                        </h3>
                    </div>
                    <div class="widget__body">
                       {{#if this.request}}
                        Request [JSON]:
                        <pre>
                            <code>
{{{jsonToString this.request}}}
                            </code>
                        </pre>
                        {{/if}}
                        Response [JSON]:
                        <pre>
                            <code>
{{jsonToString this.response}}
                            </code>
                        </pre>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>